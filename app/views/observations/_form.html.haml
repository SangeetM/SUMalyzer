%fieldset
  .form-group
    = f.label :patient do
      Patient
    = f.select :patient_id, options_for_select(current_user.patients.map{ |pat| [pat.name, pat.id] }, resource.patient_id), {}, { class: 'form-control' }

%fieldset
  .form-group
    = f.label :city do
      Current location
    = f.text_field :city, class: 'form form-control'

%fieldset
  .form-group
    = f.label "Comment"
    = f.text_area :comment, class: 'form form-control'
