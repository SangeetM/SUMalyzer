.row
  .col-md-12
    %h1 Edit observation data

.row
  .cl-md-12
    = form_for resource do |f|
      .col-md-12
        = render 'form', f: f
      .col-md-12
        = f.submit 'Speichern', class: 'btn btn-primary'
        = link_to "Abbrechen", observations_path, class: 'btn btn-default'
.row
  .col-md-12
    %h4 Danger Zone
    = link_to observation_path(resource), method: :delete, class: 'btn btn-mini btn-danger' do
      %i.glyphicon.glyphicon-trash
      Delete this observation forever
